export PATH=$PATH:$HOME/.apps:$HOME/.apps/jetbrains

export GOPATH=$HOME/go
export PATH=$GOPATH/bin:$HOME/go/go1.19.4/bin:$PATH

export PATH=$PATH:$HOME/.local/bin

# run ssh agent
if ! pgrep -u $USER -f "gpg-agent.*enable-ssh-support" > /dev/null
then
    pkill gpg-agent
    gpg-agent --homedir $HOME/.gnupg --daemon --enable-ssh-support
fi
SSH_AUTH_SOCK=$(gpgconf --list-dir agent-ssh-socket)
export SSH_AUTH_SOCK

# aliases
alias gnb='git checkout -b'
alias gpb='git push -u origin $(git branch --show-current)'
alias gcbm='PREV=$(git branch --show-current) && git checkout master && git pull && git branch -d $PREV'